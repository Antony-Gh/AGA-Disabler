<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:id="@+id/drawer_layout"
	android:background="@color/black">
<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:orientation="vertical"
		android:id="@+id/_coordinator"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<include
			android:id="@+id/app_bar"
			layout="@layout/toolbar"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:gravity="center"
		android:layout_weight="1"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:orientation="horizontal">
		<LinearLayout
			android:id="@+id/first"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/load_linear"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:orientation="vertical">
				<com.aga.disabler.pro.adapters.AGAProgressbar
					android:id="@+id/aga_progress_bar"
					android:layout_height="100dp"
					android:layout_width="100dp"
					android:src="@drawable/ic_load"
					/>
			</LinearLayout>
				<ListView
					android:id="@+id/listviewall"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="3dp"
					android:choiceMode="none"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="1"
			android:orientation="horizontal"
			android:id="@+id/appinfolinear"
			android:layout_height="match_parent">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/tablayout"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/knox_back_color"
				android:padding="4dp"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear2"
					android:layout_width="match_parent"
					android:layout_height="62dp"
					android:background="@drawable/appinfo_linear_shape"
					android:layout_marginBottom="5dp"
					android:paddingStart="15dp"
					android:paddingEnd="15dp"
					android:gravity="start|center"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview1"
						android:layout_width="55dp"
						android:padding="2dp"
						android:layout_height="match_parent"
						android:src="@drawable/default_image"
						android:scaleType="fitXY"
						android:contentDescription="@string/extract_app_icon" />
					<LinearLayout
						android:id="@+id/linear14"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="start|center"
						android:orientation="vertical">
						<TextView
							android:id="@+id/appname1"
							android:layout_width="wrap_content"
							android:layout_height="0dp"
							android:padding="2dp"
							android:gravity="start|center_vertical"
							android:text="@string/app_name"
							android:textSize="14sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:layout_weight="1"/>
						<TextView
							android:id="@+id/pkgname1"
							android:layout_width="wrap_content"
							android:layout_height="0dp"
							android:padding="2dp"
							android:gravity="start|center_vertical"
							android:text="@string/pkgname"
							android:textSize="14sp"
							android:textColor="#000000"
							android:layout_weight="1"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear34"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="2dp"
						android:background="#FF9A342A"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/textview1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center_horizontal|center_vertical"
							android:text="@string/all_app_info"
							android:textSize="16sp"
							android:textStyle="bold|italic"
							android:textColor="#FFFF9700"/>
					</LinearLayout>
					<ScrollView
						android:id="@+id/vscroll1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginTop="8dp"
						android:padding="2dp"
						android:background="#FFFFFF">
						<LinearLayout
							android:id="@+id/linear33"
							android:background="#FFFFFFFF"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="2dp"
							android:orientation="vertical">
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_size_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_install_source_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_version_code_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_version_name_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_install_date_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_last_modify_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_targetsdk_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_targetsdk_name_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_minsdk_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_minsdk_name_layout"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_meta_data"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_signature"/>
							<include
								layout="@layout/appinfo_item"
								android:layout_height="wrap_content"
								android:layout_width="match_parent"
								android:id="@+id/app_native_lib"/>
						</LinearLayout>
					</ScrollView>
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>
		<LinearLayout
			android:id="@+id/linload2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:visibility="gone"
			android:background="@color/knox_back_color"
			android:orientation="horizontal">
			<com.aga.disabler.pro.adapters.AGAProgressbar
				android:id="@+id/info_progress_bar"
				android:layout_height="100dp"
				android:layout_width="100dp"
				android:src="@drawable/ic_load"
				/>
		</LinearLayout>
	</LinearLayout>
	</LinearLayout>
	</LinearLayout>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>