<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/stealth_switch"
        android:layout_margin="7dp"
        android:layout_height="match_parent"
        android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/lock_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.aga.disabler.pro.lockview.PatternLockView
            android:id="@+id/pattern_lock_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:correctStateColor="?attr/permission_text_color_true"
            app:normalStateColor="?colorOnBackground"
            app:wrongStateColor="?attr/permission_text_color_false" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/draw_pattern_to_unlock"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stealth_switch"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/launch"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:text="@string/apply_stealth_mode"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/launch"
        style="@style/appinfo_button_style"
        android:layout_width="320dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:text="@string/remove_current_pattern"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

</RelativeLayout>