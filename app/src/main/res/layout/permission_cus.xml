<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="1dp"
	android:layout_marginBottom="1dp"
	android:id="@+id/main_linear"
	android:padding="6dp"
	android:gravity="center"
	android:orientation="horizontal">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_toStartOf="@+id/perstate"
		android:orientation="vertical">

		<TextView
			android:id="@+id/pername"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="start|center_vertical"
			android:padding="3dp"
			android:layout_marginBottom="3dp"
			android:text="@string/app_name_title"
			android:textAppearance="@style/merrifont"
			android:textSize="14sp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/perinfo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="start|center_vertical"
			android:padding="3dp"
			android:text="@string/app_name"
			android:textAppearance="@style/robotofont"
			android:textSize="12sp" />
	</LinearLayout>
	<TextView
		android:id="@+id/perstate"
		android:layout_width="80dp"
		android:layout_height="wrap_content"
		android:padding="2dp"
		android:gravity="center"
		android:textAppearance="@style/merrifont"
		android:text="@string/dis"
		android:textSize="12sp"
		android:textStyle="bold"
		android:layout_alignParentEnd="true"
		android:layout_centerInParent="true"
		android:textColor="?permission_text_color_false" />
</RelativeLayout>
