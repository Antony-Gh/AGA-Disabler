<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ScrollView
		android:id="@+id/linear6"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="8dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/info_permission"
				android:layout_width="700dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:gravity="center"
				android:padding="2dp"
				android:layout_margin="20dp"
				android:text="@string/device_admin_ex"
				android:textAppearance="@style/robotofont"
				android:textColor="?attr/colorTertiary"
				android:textSize="24sp"
				android:textStyle="bold" />
				<TextView
					android:layout_width="700dp"
					android:layout_height="match_parent"
					android:gravity="center"
					android:layout_margin="20dp"
					android:padding="2dp"
					android:text="@string/device_admin_fullex"
					android:textAppearance="@style/robotofont"
					android:textSize="24sp" />

			<TextView
				android:id="@+id/userAgreement"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:autoLink="none|web|email"
				android:gravity="center|start"
				android:linksClickable="true"
				android:layout_margin="20dp"
				android:padding="8dp"
				android:text="@string/privacy_policy_des"
				android:textAppearance="@style/robotofont"
				android:textColor="?attr/colorTertiary"
				android:textSize="24sp"
				android:textStyle="bold" />

			<CheckBox
				android:id="@+id/checkBox_agreement"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:layout_margin="20dp"
				android:gravity="center"
				android:text="@string/agr"
				android:textSize="22sp" />

			<Button
				android:id="@+id/button4"
				android:layout_width="320dp"
				android:layout_height="120dp"
				android:layout_margin="20dp"
				android:gravity="center"
				android:text="@string/enable_admin_btn"
				android:textSize="22sp" />

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="300dp"
				android:layout_margin="20dp"
				android:padding="5dp"
				android:src="@drawable/samsung_knox_nobg"
				app:tint="?attr/colorPrimary"
				android:importantForAccessibility="no" />
		</LinearLayout>
	</ScrollView>

	<LinearLayout
		android:id="@+id/load"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:visibility="gone">

		<TextView
			android:id="@+id/text"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:layout_margin="20dp"
			android:gravity="center"
			android:padding="6dp"
			android:text="@string/please"
			android:textSize="28sp" />

		<ProgressBar
			android:id="@+id/prog"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:indeterminate="true"
			android:indeterminateOnly="true" />
	</LinearLayout>
</LinearLayout>
