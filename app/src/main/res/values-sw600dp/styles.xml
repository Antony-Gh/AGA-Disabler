<resources>

    <style name="Theme.AGADisabler.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AGADisabler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AGADisabler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HwCheckBox">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/merrifont</item>
        <item name="android:theme">@style/Widget.Material3.CompoundButton.CheckBox</item>
    </style>

    <style name="HwLinear">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingStart">18dp</item>
    </style>

    <style name="HwDescription">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAppearance">@style/robotofont</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.AGADisabler.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeErrorColor">?attr/colorError</item>
        <item name="errorIconTint">?attr/colorError</item>
        <item name="errorTextColor">?attr/colorError</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>


    <style name="appinfo_fab_style">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="appinfo_button_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/robotofont</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="appinfo_linear_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="policy_img_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="policy_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAppearance">@style/merrifont</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="policy_switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">320dp</item>
        <item name="android:minWidth">310dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAppearance">@style/robotofont</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaterialAnimations" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowSharedElementEnterTransition">@transition/changebounds</item>
        <item name="android:windowSharedElementExitTransition">@transition/changebounds</item>
    </style>

    <style name="merrifont" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:fontFamily">@font/merriweather</item>
    </style>

    <style name="robotofont" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:fontFamily">@font/roboto</item>
    </style>


</resources>
